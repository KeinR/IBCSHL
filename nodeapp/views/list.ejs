<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>List me the things</title>
    <link href="/public/style.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  </head>
  <body>
    <a class="btn btn-primary" role="button" href="/">home</a> <br>
    <a class="btn btn-primary" role="button" href="/add">add</a>

    <div id="container">
      <table class="table">
        <thead>
          <tr>
            <th colspan="4">Students</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Spirit Animal</td>
            <td>Info</td>
          </tr>
          <% students.map(s => { %>
            <tr>
              <td><%= s._id %></td>
              <td><%= s.name %></td>
              <td><%= s.animal %></td>
              <td><%= s.birthday.toISOString().substring(0,10) %></td>
              <td><img src="<%= s.image %>" width="200"/></td>
              <td><a class="btn btn-primary" href="/detail/<%= s._id %>" role="button">Would you like to know more?</a></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    
  </body>
</html>
