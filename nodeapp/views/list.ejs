<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>List me the things</title>
    <link href="/public/style.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  </head>
  <body>
    <a class="btn btn-primary" role="button" href="/">home</a> <br>

    <div id="container">
      <table class="table">
        <thead>
          <tr>
            <th colspan="2">Students</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Spirit Animal</td>
            <td>Info</td>
          </tr>
          <% for (let id in students) { %>
            <tr>
              <td><%= students[id].id %></td>
              <td><%= students[id].name %></td>
              <td><%= students[id].spiritAnimal %></td>
              <td><a class="btn btn-primary" href="/detail/<%= id %>" role="button">Would you like to know more?</a></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <script src="script.js"></script>
    
  </body>
</html>
